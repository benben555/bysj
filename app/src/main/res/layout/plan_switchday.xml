    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="40dp"
            android:text="每天背单词"
            android:layout_height="match_parent">
        </TextView>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="40dp"
            android:text="完成天数"
            android:layout_height="match_parent">
        </TextView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="--------------"
        android:textSize="40dp"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center|right"
                        android:textSize="30dp"
                        android:text="10">
                    </TextView>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:textSize="30dp"
                        android:text="个">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center|right"
                        android:textSize="30dp"
                        android:text="20">
                    </TextView>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:textSize="30dp"
                        android:text="个">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center|right"
                        android:textSize="30dp"
                        android:text="30">
                    </TextView>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:textSize="30dp"
                        android:text="个">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center|right"
                        android:textSize="30dp"
                        android:text="40">
                    </TextView>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:textSize="30dp"
                        android:text="个">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center|right"
                        android:textSize="30dp"
                        android:text="50">
                    </TextView>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:textSize="30dp"
                        android:text="个">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        <TextView
            android:id="@+id/plan_day"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center|right"
            android:textSize="20dp"
            android:text="10"
            android:layout_height="match_parent">
        </TextView>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center|left"
            android:text="天"
            android:textSize="20dp"
            android:layout_height="match_parent">
        </TextView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text=" "
        android:textSize="40dp"></TextView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="确定调整"
        android:textColor="#ffff55"
        android:background="#5522ff">
    </Button>
</LinearLayout>